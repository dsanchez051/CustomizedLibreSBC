CHECK SYSTEM {{ ansible_hostname }}
  GROUP system

  IF LOADAVG(1MIN) > 20
  THEN ALERT
  IF LOADAVG(5MIN) > 10
  THEN ALERT
  IF LOADAVG(15MIN) > 8
  THEN ALERT
  IF CPU(USER) > 75%
  THEN ALERT
  IF CPU(SYSTEM) > 30%
  THEN ALERT
  IF CPU(WAIT) > 30%
  THEN ALERT
  IF MEMORY > 75%
  THEN ALERT

CHECK FILESYSTEM fs_/ WITH PATH /
  GROUP system

  IF CHANGED FSFLAGS
  THEN ALERT
  IF SPACE > 80%
  THEN ALERT
  IF INODE > 80%
  THEN ALERT
